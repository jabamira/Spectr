<Page x:Class="Spectr.AdministratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Spectr.Data"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdministratorPage"
      KeyDown="MainWindow_KeyDown"
      Focusable="True">
    <Page.Resources>    
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                        CornerRadius="7">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="red"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



    </Page.Resources>

    <Grid Background="white">
       
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- Первый столбец-->
            <Border BorderBrush="Gray" BorderThickness="2" Margin="2 2 2 2" CornerRadius="5" Padding="5" Background="LightGray">
                <StackPanel Orientation="Vertical" Width="300" HorizontalAlignment="Left" >
                    <StackPanel Orientation="Horizontal" >
                        <Label FontWeight="Bold">Выберите проект</Label>
                        <Button Width="100" Margin="80 2 0 0" Style="{StaticResource RoundedButtonStyle}">Сортировка</Button>
                    </StackPanel>
                    <TreeView x:Name="treeView" ItemsSource="{Binding Contracts}" SelectedItemChanged="treeView_SelectedItemChanged_1">
                        <!-- Контракты -->
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate DataType="{x:Type local:Contract}" ItemsSource="{Binding Areas}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Контракт№ " />
                                    <TextBlock Text="{Binding ContractID}" />
                                </StackPanel>
                                <!-- Площади -->
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <HierarchicalDataTemplate DataType="{x:Type local:Area}" ItemsSource="{Binding Profiles}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Площадь: " />
                                            <TextBlock Text="{Binding AreaName}" />
                                        </StackPanel>
                                        <!-- Профили -->
                                        <HierarchicalDataTemplate.ItemTemplate>
                                            <HierarchicalDataTemplate DataType="{x:Type local:Profile}" ItemsSource="{Binding Pickets}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Профиль: " />
                                                    <TextBlock Text="{Binding ProfileName}" />
                                                </StackPanel>
                                                <!-- Пикеты -->
                                                <HierarchicalDataTemplate.ItemTemplate>
                                                    <DataTemplate DataType="{x:Type local:Picket}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="Пиект№ " />
                                                            <TextBlock Text="{Binding PicketID}" />
                                                        </StackPanel>
                                                      
                                                    </DataTemplate>
                                                </HierarchicalDataTemplate.ItemTemplate>
                                            </HierarchicalDataTemplate>
                                        </HierarchicalDataTemplate.ItemTemplate>
                                    </HierarchicalDataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>



                </StackPanel>
            </Border>
            <!-- Второй столбец-->
            <Border BorderBrush="Gray" BorderThickness="2" Margin="2" CornerRadius="5"  Background="LightGray" >
            <StackPanel Orientation="Vertical">
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="top" >
                    <Button x:Name="BtnInfo" Height="20" Width="110" VerticalAlignment="Top" Margin="5"  Background="Black" Foreground="White" BorderThickness="0" Style="{StaticResource RoundedButtonStyle}" Click="BtnInfo_Click">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Посмотреть информацию" />
                        </Viewbox>
                    </Button>

                    <Button x:Name="BtnGraphik" Height="20" Width="110" VerticalAlignment="Top" Margin="5"  Background="Black" Foreground="White" BorderThickness="0" Style="{StaticResource RoundedButtonStyle}" Click="BtnGraphik_Click">
                       
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Построить график" />
                        </Viewbox>
                    </Button>
                    <Button x:Name="BtnSchem" Height="20" Width="110" VerticalAlignment="Top" Margin="5"  Background="Black" Foreground="White" BorderThickness="0" Style="{StaticResource RoundedButtonStyle}" Click="BtnSchem_Click">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Построить схему" />
                        </Viewbox> 
                    </Button>
                    <Button x:Name="BtnReport" Height="20" Width="110" VerticalAlignment="Top" Margin="5"  Background="Black" Foreground="White" BorderThickness="0" Style="{StaticResource RoundedButtonStyle}" Click="BtnReport_Click">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Сформировать отчет" />
                        </Viewbox>
                    </Button>

                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnAdd" Height="20" Width="110" VerticalAlignment="Top" Margin="5"  Background="Black" Foreground="White" BorderThickness="0" Style="{StaticResource RoundedButtonStyle}" Click="BtnAdd_Click">

                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Добавить" />
                        </Viewbox> 
                    </Button>

                    <Button x:Name="BtnEdit" Height="20"  Width="110" VerticalAlignment="Top" Margin="5"  Background="Black" Foreground="White" BorderThickness="0" Style="{StaticResource RoundedButtonStyle}" Click="BtnEdit_Click">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="  Редактировать" />
                        </Viewbox>
                      
                    </Button>
                    <Button x:Name="BtnDelete" Height="20"  Width="110" VerticalAlignment="Top" Margin="5"  Background="Black" Foreground="White" BorderThickness="0" Style="{StaticResource RoundedButtonStyle}" Click="BtnDelete_Click">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Удалить" />
                        </Viewbox>
                    </Button>
                    <Button x:Name="BtnExport" Height="20"  Width="110" VerticalAlignment="Top" Margin="5"  Background="Black" Foreground="White" BorderThickness="0" Style="{StaticResource RoundedButtonStyle}" Click="BtnExport_Click">

                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Экспортировать" />
                        </Viewbox> 
                    </Button>
                </StackPanel>

                    <Label x:Name="LabelLogin" Content="User:Login" FontSize="12" HorizontalContentAlignment="Right" Margin="0 0 20 0">

                    </Label>

                    <Label Name="infoLabel" HorizontalContentAlignment="Center">Информация о выбранном проекте</Label>


                    <ListView Name="listViewPickets"  Visibility="Collapsed " Height="200">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding PicketID}">

                                    </GridViewColumn>
                                    <GridViewColumn Header="X" Width="60" DisplayMemberBinding="{Binding CoordinateX}">
                                        
                                    </GridViewColumn>
                                    <GridViewColumn Header="Y" Width="60" DisplayMemberBinding="{Binding CoordinateY}">

                                    </GridViewColumn>
                                    <GridViewColumn Header="Канал 1" Width="60" DisplayMemberBinding="{Binding Channel1}">

                                    </GridViewColumn>
                                    <GridViewColumn Header="Канал 2" Width="60" DisplayMemberBinding="{Binding Channel2}">

                                    </GridViewColumn>
                                    <GridViewColumn Header="Канал 3" Width="60" DisplayMemberBinding="{Binding Channel3}">

                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    <ListView Name="listViewProfile" Visibility="Collapsed" Height="200">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding ProfileID}">

                                    </GridViewColumn>
                                    <GridViewColumn Header="Название профиля" Width="120" DisplayMemberBinding="{Binding ProfileName}">

                                    </GridViewColumn>
                                    <GridViewColumn Header="Тип профиля" Width="120" DisplayMemberBinding="{Binding ProfileType}">

                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <ListView Name="listViewArea"  Visibility="Collapsed" Height="200"> 
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding AreaID}">

                                    </GridViewColumn>
                                    <GridViewColumn Header="Имя площади" Width="120" DisplayMemberBinding="{Binding AreaName}">

                                    </GridViewColumn>

                                </GridView>
                            </ListView.View>
                        </ListView>
                    <ListView Name="listViewProfileCoordinates"  Visibility="Collapsed" Height="200">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding ProfileCoordinatesID}">

                                </GridViewColumn>
                                <GridViewColumn Header="X" Width="80" DisplayMemberBinding="{Binding X}">

                                </GridViewColumn>
                                <GridViewColumn Header="Y" Width="80" DisplayMemberBinding="{Binding X}">

                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView Name="listViewAreaCoordinates"  Visibility="Collapsed" Height="200">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding AreaCoordinatesID}">

                                </GridViewColumn>
                                <GridViewColumn Header="X" Width="80" DisplayMemberBinding="{Binding X}">

                                </GridViewColumn>
                                <GridViewColumn Header="Y" Width="80" DisplayMemberBinding="{Binding Y}">

                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView  Name="listViewOperators" Visibility="Visible">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID оператора" DisplayMemberBinding="{Binding OperatorID}">

                                </GridViewColumn>
                                <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FullName}">

                                </GridViewColumn>
                                <GridViewColumn Header="Электронная почта" DisplayMemberBinding="{Binding Email}">

                                </GridViewColumn>
                                <GridViewColumn Header="Номер телефона" DisplayMemberBinding="{Binding PhoneNumber}">

                                </GridViewColumn>
                                <GridViewColumn Header="Название работы" DisplayMemberBinding="{Binding JobTitle}">

                                </GridViewColumn>
                             
                            </GridView>
                        </ListView.View>
                    </ListView>
                    

                </StackPanel>
           </Border>
         
        </StackPanel>
        
       

    </Grid>
</Page>
