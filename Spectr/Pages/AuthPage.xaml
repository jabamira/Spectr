<Page x:Class="Spectr.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Spectr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Background="White">
        <StackPanel Width=" 200" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBox x:Name="Login_box" Margin="0 0 0 20"></TextBox>
            <TextBox x:Name="Password_box" Margin="0 0 0 20"></TextBox>
            <ComboBox Name="typeUserComboBox" Margin="0 0 0 20"></ComboBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button x:Name="LoginBtn" Click="LoginBtn_Click" Margin="0 0 0 0" >Войти</Button>
               
            </StackPanel>
           
        </StackPanel>
        
    </Grid>
</Page>
